{
    "name": "locomotivemtl/charcoal-object",
    "description": "Object (Content and UserData) definition and object behaviors and tools.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Mathieu Ducharme",
            "email": "mat@locomotive.ca"
        }
    ],
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-master": "0.1.x-dev"
        }
    },
    "require": {
        "php": ">=5.6.0",
        "psr/log": "^1.0",
        "locomotivemtl/charcoal-config": "~0.6",
        "locomotivemtl/charcoal-factory": "~0.3",
        "locomotivemtl/charcoal-core": "^0.2",
        "locomotivemtl/charcoal-translation": "~0.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "squizlabs/php_codesniffer": "^2.4",
        "satooshi/php-coveralls": "~1.0.1",
        "locomotivemtl/charcoal-app": "~0.2",
        "zendframework/zend-permissions-acl": "^2.6",
        "cache/void-adapter": "^0.3.1"
    },
    "autoload": {
        "psr-4": {
            "Charcoal\\Object\\": "src/Charcoal/Object"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Charcoal\\Object\\Tests\\": "tests/Charcoal/Object"
        }
    },
    "scripts": {
        "test": [
            "@tests"
        ],
        "tests": [
            "@phplint",
            "@phpcs",
            "@phpunit"
        ],
        "phplint": "find {src,tests} -name '*.php' -print0 | xargs -0 -n1 -P8 php -l | grep -v '^No syntax errors detected'; test $? -eq 1",
        "phpunit": "php vendor/bin/phpunit --configuration tests/phpunit.xml --coverage-text",
        "phpcs": "php vendor/bin/phpcs --config-set ignore_warnings_on_exit 1;php vendor/bin/phpcs -ps --colors --standard=phpcs.xml src/",
        "phpcbf": "php vendor/bin/phpcbf -ps --colors --standard=phpcs.xml src/ tests/"
    }
}
